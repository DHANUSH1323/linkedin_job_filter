{
    "manifest_version": 3,
    "name": "LinkedIn Job Time Filter",
    "version": "1.0",
    "description": "Quick filter for LinkedIn jobs by post time (30 mins, 1 hour, 24 hours).",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ]
}